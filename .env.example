# Docsray MCP Server Configuration

# Transport configuration
DOCSRAY_TRANSPORT=stdio  # Options: stdio, http
DOCSRAY_HTTP_PORT=3000
DOCSRAY_HTTP_HOST=127.0.0.1

# Provider configuration
DOCSRAY_DEFAULT_PROVIDER=auto  # Options: auto, pymupdf4llm, pytesseract, ocrmypdf, mistral-ocr, llama-parse

# PyMuPDF4LLM provider
DOCSRAY_PYMUPDF_ENABLED=true

# PyTesseract provider
DOCSRAY_PYTESSERACT_ENABLED=false
DOCSRAY_TESSERACT_PATH=/usr/bin/tesseract
DOCSRAY_TESSERACT_LANGUAGES=eng,fra,deu

# OCRmyPDF provider  
DOCSRAY_OCRMYPDF_ENABLED=false

# Mistral OCR provider
DOCSRAY_MISTRAL_ENABLED=false
DOCSRAY_MISTRAL_API_KEY=your-mistral-api-key
DOCSRAY_MISTRAL_BASE_URL=https://api.mistral.ai

# LlamaParse provider
DOCSRAY_LLAMAPARSE_ENABLED=false
DOCSRAY_LLAMAPARSE_API_KEY=your-llamaparse-api-key
DOCSRAY_LLAMAPARSE_MODE=balanced  # Options: fast, balanced, premium

# Performance settings
DOCSRAY_CACHE_ENABLED=true
DOCSRAY_CACHE_TTL=3600  # seconds
DOCSRAY_MAX_CONCURRENT_REQUESTS=10
DOCSRAY_TIMEOUT_SECONDS=120

# Logging
DOCSRAY_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR